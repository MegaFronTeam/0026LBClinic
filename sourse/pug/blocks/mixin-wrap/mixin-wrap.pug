mixin arrow()
	.swiper-button-hand.swiper-button-hand-prev.swiper-button-prev
		+icon('chevron-left')
	.swiper-button-hand.swiper-button-hand-next.swiper-button-next
		+icon('chevron-right')
//- /arrow for swiper-slider

mixin control()
	.slider-control
		.splide__arrows.splide__arrows--ltr
			button.splide__arrow.splide__arrow--prev(type='button' aria-controls='splide01-track' aria-label='Previous slide')
				+icon("arrow-right")
			button.splide__arrow.splide__arrow--next(type='button' aria-controls='splide01-track' aria-label='Next slide')
				+icon("arrow-right")
		ul.splide__pagination
